{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2016",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "lib": ["esnext", "dom"],
    "forceConsistentCasingInFileNames": true,
    "types": [],
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@/*": ["src/*"],
      "@loa": ["src/packages/loa-engine"],
      "@compiler": ["src/packages/compiler-core"],
      "@runtime": ["src/packages/runtime-core"],
      "@render": ["src/packages/render-core"],
      "@common": ["src/packages/common"],
      "@loax": ["src/packages/loax-core"]
    }
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["dist", "test", "node_modules"]
}
